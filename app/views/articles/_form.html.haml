= simple_form_for @article, html: { class: 'form-horizontal' } do |f|
	= f.input :title, input_html: { class: 'span6' }
	= f.input :summary, as: :text, input_html: { class: 'span6', rows: 6 }
	= f.input :body, as: :text, input_html: { class: 'span6', rows: 10 }
	= f.input :password, as: :password
	= f.button :submit